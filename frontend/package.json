{
	"name": "frontend",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev --host",
		"dev-server": "vite dev --mode server --host",
		"dev-prod": "vite dev --mode prod --host",
		"build": "vite build",
		"build:node": "ADAPTER=node vite build",
		"build:vercel": "ADAPTER=vercel vite build",
		"build:static": "ADAPTER=static vite build",
		"preview": "vite preview",
		"preview-server": "vite preview --mode server --host",
		"run:node-env": "node -r dotenv/config build-node",
		"run:node-sv08ludweiler.de": "node -r dotenv/config build-node dotenv_config_path=.env.server.local",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier . --check . && eslint .",
		"format": "prettier --write .",
		"prepare": "npm run smui-theme-light && npm run smui-theme-dark",
		"smui-theme-light": "smui-theme compile src/smui.css -i src/theme",
		"smui-theme-dark": "smui-theme compile src/smui-dark.css -i src/theme/dark",
		"sveltekit:sync": "svelte-kit sync",
		"pwa:generate:assets": "pwa-assets-generator --preset minimal ./src/lib/assets/wappen.png -m"
	},
	"devDependencies": {
		"@smui/button": "8.0.3",
		"@smui/card": "8.0.3",
		"@sveltejs/adapter-auto": "6.1.0",
		"@sveltejs/adapter-node": "5.3.1",
		"@sveltejs/adapter-static": "3.0.9",
		"@sveltejs/adapter-vercel": "5.10.2",
		"@sveltejs/kit": "2.36.2",
		"@sveltejs/vite-plugin-svelte": "6.1.3",
		"@typescript-eslint/eslint-plugin": "8.40.0",
		"@typescript-eslint/parser": "8.40.0",
		"autoprefixer": "10.4.21",
		"dotenv": "17.2.1",
		"eslint": "9.34.0",
		"eslint-config-prettier": "10.1.8",
		"eslint-plugin-svelte": "3.11.0",
		"postcss": "8.5.6",
		"qs": "6.14.0",
		"smui-theme": "8.0.3",
		"svelte": "5.38.3",
		"svelte-check": "4.3.1",
		"tailwindcss": "4.1.12",
		"tslib": "2.8.1",
		"typescript": "5.9.2",
		"vercel": "46.0.2",
		"vite": "7.1.3",
		"vitest": "3.2.4",
		"@rollup/plugin-node-resolve": "16.0.1",
		"@rollup/plugin-commonjs": "28.0.6",
		"@rollup/plugin-json": "6.1.0",
		"vite-plugin-pwa": "1.0.3",
		"@vite-pwa/sveltekit": "1.0.0",
		"@vite-pwa/assets-generator": "1.0.0",
		"@sveltejs/enhanced-img": "0.8.1",
		"@tailwindcss/postcss": "4.1.12",
		"@tailwindcss/vite": "4.1.12"
	},
	"dependencies": {
		"isomorphic-dompurify": "2.26.0",
		"marked": "16.2.0"
	},
	"type": "module"
}
